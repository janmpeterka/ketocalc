<table class="table table-striped">
    <thead><tr>
        <th>název</th>
        <th>energie (kJ)</th>
        <th>bílkoviny (g)</th>
        <th>tuky (g)</th>
        <th>sacharidy (g)</th>
        <th>množství (g)</th>
        <th><a class="btn btn-primary" href="{{ url_for('DailyPlanView:show', date=daily_plan.date) }}">přidat recept</a></th>
    </tr></thead>
    <tbody>
    {% for daily_recipe in daily_recipes %}
        <tr>
            <td><a href="{{ url_for('RecipeView:show', id=daily_recipe.recipe.id) }}">{{ daily_recipe.recipe.name }}</a></td>
            <td>{{ daily_recipe.values.calorie | round(2) }}</td>
            <td>{{ daily_recipe.values.protein | round(2) }}</td>
            <td>{{ daily_recipe.values.fat | round(2) }}</td>
            <td>{{ daily_recipe.values.sugar | round(2) }}</td>
            <td>{{ daily_recipe.amount }}</td>
            <td></td>
        </tr>
    {% endfor %}
    </tbody>
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th data-toggle="tooltip" title="tuky : bílkoviny + cukry">poměr</th>
    </tr>
    <tr>
        <th>celkem:</th>
        <td>{{ daily_plan.totals.calorie | round(2) }}</td>
        <td>{{ daily_plan.totals.protein | round(2) }}</td>
        <td>{{ daily_plan.totals.fat | round(2) }}</td>
        <td>{{ daily_plan.totals.sugar | round(2) }}</td>
        <td>{{ daily_plan.totals.amount | round(2) }}</td>
        <td>{{ daily_plan.totals.ratio }} : 1</td>
    </tr>
</table>
