<div class="col">
    <label for="recipes"><h3> seznam receptů </h3></label>
    <ul name="recipes">
    {% for recipe in recipes %}
        <li>{{ link_to(recipe) }}</li>
    {% endfor %}
    </ul>

    {% if current_user.is_admin and all_recipes %}
    <div class="admin-field">
	    <label for="all_recipes"><h3>všechny</h3></label>
	    <ul name="all_recipes">
        {% for recipe in all_recipes %}
            <li>{{ link_to(recipe) }}</li>
        {% endfor %}
	    </ul>
    </div>
    {% endif %}


</div>
