{% extends "base.html.j2" %}
{% block title %} suroviny {% endblock %}

{% block content %}
<h1>
    moje suroviny
    <a class="btn btn-secondary float-right" href="{{ url_for('IngredientView:new') }}"> přidat surovinu </a>
</h1>

<table id="ingredients" class="table">
    <tr>
        <th>název</th>
        <th>{{ texts.energy_100 }}</th>
        <th>{{ texts.protein_100 }}</th>
        <th>{{ texts.fat_100 }}</th>       
        <th>{{ texts.sugar_100 }}</th>
    </tr>
    {% for ingredient in ingredients: %}
        <tr>
            <td>{{ link_to(ingredient) }}</td>
            <td>{{ ingredient.calorie }}</td>
            <td>{{ ingredient.protein }}</td>
            <td>{{ ingredient.fat }}</td>
            <td>{{ ingredient.sugar }}</td>
        </tr>
    {% endfor %}
</table>


<h1>
    sdílené suroviny
    <a class="btn btn-secondary float-right" href="{{ url_for('IngredientView:new_shared') }}"> přidat sdílenou surovinu </a>
</h1>
<table id="shared_ingredients" class="table">
    <tr>
        <th>název</th>
        <th>{{ texts.energy_100 }}</th>
        <th>{{ texts.protein_100 }}</th>
        <th>{{ texts.fat_100 }}</th>       
        <th>{{ texts.sugar_100 }}</th>
    </tr>
    {% for ingredient in shared_ingredients: %}
        <tr>
            <td>{{ link_to(ingredient) }}</td>
            <td>{{ ingredient.calorie }}</td>
            <td>{{ ingredient.protein }}</td>
            <td>{{ ingredient.fat }}</td>
            <td>{{ ingredient.sugar }}</td>
        </tr>
    {% endfor %}
</table>
{% endblock %}

