{% extends "base.html.j2" %}
{% block title %}
    {{ texts.ingredient_new }}
{% endblock %}

{% block style %}{% endblock %}

{% block script %}{% endblock %}

{% block content %}
    <div class="container">
        <form method="post" action="{{ url_for('IngredientView:post') }}" class="form-group col-6" accept-charset="UTF-8">
            {{ form.csrf_token }}
            {% from "macros/_form_element.html.j2" import render_field %}
            {{ render_field(form.name) }}
            {{ render_field(form.protein) }}
            {{ render_field(form.fat) }}
            {{ render_field(form.sugar) }}
            {{ render_field(form.calorie) }}
            {{ render_field(form.submit) }}
        </form>
    </div>
{% endblock %}

